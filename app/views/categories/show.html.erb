<p id="notice"><%= notice %></p>

<p>

 <h1> <%= @category.name %> </h1>
 <h2>Total de productos: <%= @category.products.size %></h2>
  <table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Iva</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>
</thead>
  <tbody>
    <% @category.products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.iva %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      
    <% end %>
  </tbody>
  </table>
</p>
<%= user_alter_element(@category) %>
<%= link_to 'Add a new product', new_product_path %> |
<%= link_to 'Categories List', categories_path %> |

